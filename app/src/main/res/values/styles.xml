<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fitsSystemWindows">false</item>
        <item name="android:windowBackground">@color/windowBackgroundColor</item>
    </style>

    <!--全屏主题-->
    <style name="AppCompat.FullScreen" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="rb_with_arrow_bt">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:button">@null</item>
        <item name="android:drawableEnd">@drawable/selector_arrow</item>
        <item name="android:textColor">@color/text_black_green</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/textSize_common</item>
    </style>

    <!--分割线-->
    <style name="tranversLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/divider</item>
    </style>
</resources>
