<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin"
    android:layout_marginLeft="@dimen/margin"
    android:layout_marginRight="@dimen/margin"
    android:layout_marginTop="@dimen/margin"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/layout_imgs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true">

        <ImageView
            android:id="@+id/item_info_image"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:background="@drawable/default_image"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/item_image_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/item_info_image"
            android:layout_alignRight="@id/item_info_image"
            android:padding="4dp"
            android:text="4"
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/item_sale_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_sale_out" />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/margin"
        android:layout_toRightOf="@id/layout_imgs"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_brand_model_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="2dp"
            android:text="品牌型号名称"
            android:textColor="@color/primary_text"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:paddingBottom="2dp"
            android:text="地址"
            android:textColor="#444"
            android:textSize="@dimen/SmallTextSize" />

        <TextView
            android:id="@+id/item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="2dp"
            android:text="时间"
            android:textColor="@color/lightgrey"
            android:textSize="@dimen/SmallerTextSize" />

        <TextView
            android:id="@+id/item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="价格"
            android:textColor="#f45709"
            android:textSize="15sp" />

    </LinearLayout>


    <TextView
        android:id="@+id/item_manage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/layout_imgs"
        android:layout_alignParentRight="true"
        android:text="管理"
        android:textColor="@color/steelblue"
        android:textSize="@dimen/BasicTextSize" />
</RelativeLayout>

