<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="@dimen/margin"
    android:layout_marginLeft="@dimen/margin"
    android:layout_marginRight="@dimen/margin"
    >
        <RelativeLayout
            android:id="@+id/layout_imgs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            >

                <ImageView
                    android:id="@+id/item_info_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:src="@drawable/add_photo"
                    />

                <TextView
                    android:id="@+id/item_image_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/item_info_image"
                    android:layout_alignRight="@id/item_info_image"
                    android:text="4"
                    android:padding="4dp"
                    android:textColor="@color/white"
                    />

                <ImageView
                    android:id="@+id/item_sale_out"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_sale_out"
                    android:layout_alignTop="@id/item_info_image"
                    android:layout_alignLeft="@id/item_info_image"
                    android:layout_margin="@dimen/paddingSmall"
                    />

        </RelativeLayout>


        <TextView
            android:id="@+id/item_manage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="管理"
            android:textSize="@dimen/BasicTextSize"
            android:layout_gravity="bottom"
            android:textColor="@color/steelblue"
            android:paddingLeft="4dp"
            android:paddingTop="8dp"
            android:paddingRight="8dp"
            android:layout_alignBottom="@id/layout_imgs"
            android:layout_alignParentRight="true"
            />



        <LinearLayout
            android:layout_toRightOf="@id/layout_imgs"
            android:layout_toLeftOf="@id/item_manage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/margin"
            android:layout_gravity="bottom"
            >

                <TextView
                    android:id="@+id/item_brand_model_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="品牌型号名称"
                    android:paddingBottom="2dp"
                    android:textStyle="bold"
                    android:textSize="@dimen/BasicTextSize"
                    android:textColor="@color/primary_text"
                    />

                <TextView
                    android:id="@+id/item_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="地址"
                    android:maxLines="2"
                    android:textColor="@color/secondary_text"
                    android:paddingBottom="2dp"
                    android:textSize="@dimen/SmallTextSize"
                    />

                <TextView
                    android:id="@+id/item_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="时间"
                    android:paddingBottom="2dp"
                    android:textColor="@color/lightgrey"
                    android:textSize="@dimen/SmallerTextSize"
                    />

                <TextView
                    android:id="@+id/item_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="价格"
                    android:textColor="@color/orange"
                    android:textSize="@dimen/SmallerTextSize"
                    android:layout_gravity="bottom"
                     />

        </LinearLayout>


</RelativeLayout>

