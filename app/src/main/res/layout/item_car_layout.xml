<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal"
    android:paddingLeft="8dp"
    android:paddingRight="20dp"
    android:paddingTop="16dp">

    <ImageView
        android:id="@+id/item_car_iv_header"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="#ccc" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp">

            <TextView
                android:id="@+id/item_car_tv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="辽宁工程机械"
                android:textColor="@color/name_text_color"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_car_tv_car_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="@color/primary_text"
                    android:textSize="16sp"
                    tools:text="徐工50G装在机械2013年" />

                <TextView
                    android:id="@+id/item_car_tv_car_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/shape_rect_corner_orange_bg"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    tools:text="10万" />

                <ImageView
                    android:id="@+id/item_car_iv_moments"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginLeft="6dp"
                    android:src="@drawable/ic_moments" />
            </LinearLayout>
        </RelativeLayout>


        <!--<com.ccq.app.weidget.MainCarImageLayout-->
            <!--android:id="@+id/item_car_gridview"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginTop="12dp"-->
            <!--app:sapcing="4dp" />-->

        <com.ccq.app.weidget.MyGridView
            android:id="@+id/item_car_gridview"
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/item_car_tv_car_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textColor="#333"
            android:textSize="14sp"
            tools:text="徐工50G装在机械2013年徐工50G装在机械2013年徐工50G装在机械2013年徐工50G装在机械2013年" />

        <TextView
            android:id="@+id/item_car_tv_all_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全文"
            android:textColor="@color/name_text_color"
            android:textSize="12sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/item_car_tv_car_location"
            android:paddingRight="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="4dp"
            android:gravity="center_vertical"
            android:text="上海·上海市"
            android:textColor="@color/name_text_color"
            android:textSize="12sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_car_tv_publish_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="1小时前"
                android:textColor="@color/secondary_text"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_tv_call"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/shape_green_corner_bg"
                    android:gravity="center"
                    android:paddingBottom="2dp"
                    android:paddingLeft="18dp"
                    android:paddingRight="18dp"
                    android:paddingTop="2dp"
                    android:text="打电话"
                    android:textColor="@color/white"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/item_tv_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:background="@drawable/shape_rect_stroke_line_bg"
                    android:paddingBottom="2dp"
                    android:paddingLeft="18dp"
                    android:paddingRight="18dp"
                    android:paddingTop="2dp"
                    android:text="发消息"
                    android:textColor="@color/primary_text"
                    android:textSize="13sp" />
            </LinearLayout>


            <ImageView
                android:id="@+id/item_car_iv_tip"
                android:layout_width="18dp"
                android:layout_height="26dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:scaleType="fitCenter"
                android:src="@drawable/jubao" />

            <TextView
                android:id="@+id/item_car_tv_report"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:layout_toLeftOf="@+id/item_car_iv_tip"
                android:background="@drawable/shape_report_bg"
                android:gravity="center"
                android:paddingBottom="3dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingTop="3dp"
                android:text="举报"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>


</LinearLayout>