<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp">

    <ImageView
        android:id="@+id/item_car_iv_header"
        android:layout_width="90px"
        android:layout_height="90px"
        android:background="#ccc" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="10dp">

        <TextView
            android:id="@+id/item_car_tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="辽宁工程机械"
            android:textColor="#0067a4"
            android:textSize="@dimen/textSize_common" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6px"
            android:gravity="bottom"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_car_tv_car_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/textSize_common"
                tools:text="徐工50G装在机械2013年" />

            <TextView
                android:id="@+id/item_car_tv_car_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10px"
                android:textColor="#ff6500"
                android:textSize="@dimen/textSize_common"
                tools:text="10万" />
        </LinearLayout>

        <com.ccq.share.MyGridView
            android:id="@+id/item_car_gridview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10px"
            android:numColumns="3"
            android:verticalSpacing="5px" />

        <TextView
            android:id="@+id/item_car_tv_car_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8px"
            android:textColor="@color/secondary_text"
            android:textSize="@dimen/textSize_secondary"
            tools:text="徐工50G装在机械2013年徐工50G装在机械2013年徐工50G装在机械2013年徐工50G装在机械2013年" />

        <TextView
            android:id="@+id/item_car_tv_car_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8px"
            android:text="上海·上海市"
            android:textColor="#5683dc"
            android:textSize="@dimen/textSize_secondary" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8px"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_car_tv_publish_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1小时前"
                android:textColor="@color/secondary_text"
                android:textSize="@dimen/textSize_secondary" />

            <TextView
                android:id="@+id/item_tv_call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:paddingBottom="2dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="2dp"
                android:text="打电话"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/textSize_secondary" />

            <TextView
                android:id="@+id/item_tv_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:background="@color/colorPrimary"
                android:paddingBottom="2dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="2dp"
                android:text="发消息"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/textSize_secondary" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="20px"
            android:background="@color/divider" />
    </LinearLayout>


</LinearLayout>