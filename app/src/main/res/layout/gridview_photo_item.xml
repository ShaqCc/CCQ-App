<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="82dp"
    android:layout_height="82dp"
    android:background="@drawable/shape_rect_stroke_bg">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/icon_add_light" />

        <TextView
            android:id="@+id/item_photo_tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="图片"
            android:textColor="#cccccc"
            android:textSize="14sp" />
    </LinearLayout>


    <ImageView
        android:id="@+id/gridviewimg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/left_tips_textview"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/shape_reverse_triangle"
        android:padding="2dp"
        android:text="封"
        android:textColor="@color/white"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/delete_iv"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="4dp"
        android:paddingTop="4dp"
        android:src="@drawable/icon_delete"
        />

    <TextView
        android:id="@+id/pakage_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@color/colorPrimary"
        android:paddingBottom="4dp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:text="封"
        android:textColor="@color/white"
        android:textSize="17sp"/>
</RelativeLayout>

