<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      android:background="@color/white"
    >


    <FrameLayout
        android:layout_width="300dp"
        android:layout_height="240dp"
        android:layout_marginTop="@dimen/padding"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/margin"
        android:background="@drawable/bg_edittext_corner"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bg_edittext_corner"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请上传微信二维码"
            android:layout_gravity="center"
            android:textColor="@color/colorPrimaryDark"
            />

    </FrameLayout>

    <Button
        android:id="@+id/btn_submit"
        android:background="@drawable/btn_style_one"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:textColor="@color/white"
        android:layout_marginRight="@dimen/paddingSmall"
        android:layout_marginLeft="@dimen/paddingSmall"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textSize="16sp"
        android:text="上传二维码" />

    <Button
        android:id="@+id/btn_open_vip"
        android:background="@drawable/btn_style_one"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:textColor="@color/white"
        android:layout_marginRight="@dimen/paddingSmall"
        android:layout_marginLeft="@dimen/paddingSmall"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textSize="16sp"
        android:text="开通会员" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/paddingSmall"
        android:layout_marginRight="@dimen/paddingSmall"
        android:layout_marginTop="@dimen/paddingSmall"
        android:text="注意：上传二维码请编辑为正方形（此二维码会在朋友圈第一张图片出现）"
        android:gravity="center_horizontal"
        android:textColor="@color/red"
        />

</LinearLayout>