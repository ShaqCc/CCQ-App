<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_margin">


    <View style="@style/tranversLine" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/shape_bottom_line_bg"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">

        <TextView
            style="@style/text_common_style"
            android:text="手机号" />

        <EditText
            android:id="@+id/phone_number"
            style="@style/edit_text_common"
            android:hint="请输入手机号"
            android:inputType="phone" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/divider"/>
        <TextView
            android:id="@+id/send_check_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="获取验证码"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/textSize_secondary" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/shape_bottom_line_bg"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">

        <TextView
            style="@style/text_common_style"
            android:text="验证码" />

        <EditText
            android:id="@+id/et_check_code"
            style="@style/edit_text_common"
            android:hint="请输入验证码"
            android:inputType="phone" />
    </LinearLayout>


    <Button
        android:id="@+id/bt_bind"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="45dp"
        android:background="@drawable/shape_green_corner_bg"
        android:gravity="center"
        android:text="绑定手机号"
        android:textColor="@color/white"
        android:textSize="@dimen/textSize_common" />
</LinearLayout>