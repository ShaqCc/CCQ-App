<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eee"
    android:orientation="vertical"
    android:padding="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="您为何要举报此信息？"
            android:textColor="#000"
            android:textSize="13sp"
            android:textStyle="bold" />

        <View
            style="@style/tranversLine"
            android:layout_marginTop="5dp" />

        <RadioGroup
            android:id="@+id/rg_reason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/reason_useless"
                style="@style/report_radio_button"
                android:text="与话题无关" />

            <RadioButton
                android:id="@+id/reason_fate"
                style="@style/report_radio_button"
                android:text="虚假信息" />

            <RadioButton
                android:id="@+id/reason_ads"
                style="@style/report_radio_button"
                android:text="广告" />

            <RadioButton
                android:id="@+id/reason_again"
                style="@style/report_radio_button"
                android:text="重复发布" />

            <RadioButton
                android:id="@+id/reason_else"
                style="@style/report_radio_button"
                android:text="其他" />

        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="举报说明(可选)"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <EditText
            android:id="@+id/et_reason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_edittext_area_bg"
            android:gravity="top"
            android:hint="请填写您的说明"
            android:lines="5"
            android:padding="10dp"
            android:textColor="#222"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/report_tv_submit"
                style="@style/common_green_bt"
                android:text="确定"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/reprot_tv_cancel"
                style="@style/common_white_bt"
                android:layout_marginLeft="16dp"
                android:text="取消"
                android:textColor="@color/black"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>