<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_base_rootview"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/fragment_base_error_layout"
        layout="@layout/state_error_layout"
        android:visibility="gone" />

    <include
        android:id="@+id/fragment_base_empty_layout"
        layout="@layout/state_empty_layout"
        android:visibility="gone" />

    <include
        android:id="@+id/fragment_base_loading_layout"
        layout="@layout/state_loading_layout"
        android:visibility="gone" />

    <FrameLayout
        android:id="@+id/fragment_base_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</FrameLayout>